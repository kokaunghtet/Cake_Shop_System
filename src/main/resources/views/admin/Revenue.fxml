<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cakeshopsystem.controllers.admin.RevenueController">
    <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox alignment="CENTER" spacing="20.0" AnchorPane.leftAnchor="39.0">

            <HBox alignment="CENTER" spacing="20.0">
                <!-- Total Member -->
                <HBox fx:id="totalMembersCard" styleClass="card" spacing="20.0">
                    <VBox alignment="CENTER">
                        <FontIcon iconLiteral="fas-users" iconSize="32"/>
                    </VBox>
                    <VBox alignment="CENTER" spacing="10">
                        <HBox>
                            <Label fx:id="lblTotalMembers" text="Total Members" />
                        </HBox>
                        <HBox alignment="CENTER">
                            <Label fx:id="lblTotalMembersResult" text="0" />
                        </HBox>
                    </VBox>
                </HBox>

                <!-- Total Orders -->
                <HBox fx:id="totalOrdersCard" styleClass="card" spacing="20.0">
                    <VBox alignment="CENTER">
                        <FontIcon iconLiteral="fas-receipt" iconSize="32"/>
                    </VBox>
                    <VBox alignment="CENTER" spacing="10">
                        <HBox>
                            <Label fx:id="lblTotalOrders" text="Total Orders" />
                        </HBox>
                        <HBox alignment="CENTER">
                            <Label fx:id="lblTotalOrdersResult" text="0" />
                        </HBox>
                    </VBox>
                </HBox>
            </HBox>

            <HBox alignment="CENTER" prefHeight="90.0" prefWidth="491.0" spacing="20.0">

                <!-- Total Sales -->
                <HBox fx:id="totalSalesCard" styleClass="card" spacing="20.0">
                    <VBox alignment="CENTER">
                        <FontIcon iconLiteral="fas-coins" iconSize="32"/>
                    </VBox>
                    <VBox alignment="CENTER" spacing="10">
                        <HBox>
                            <Label fx:id="lblTotalSales" text="Total Sales" />
                        </HBox>
                        <HBox alignment="CENTER">
                            <Label fx:id="lblTotalSalesResult" text="0" />
                        </HBox>
                    </VBox>
                </HBox>

                <!-- Total Cancel -->
                <HBox fx:id="totalCancelCard" styleClass="card" spacing="20.0">
                    <VBox alignment="CENTER">
                        <FontIcon iconLiteral="fas-ban" iconSize="32"/>
                    </VBox>
                    <VBox alignment="CENTER" spacing="10">
                        <HBox>
                            <Label fx:id="lblTotalCancel" text="Total Cancel" />
                        </HBox>
                        <HBox alignment="CENTER">
                            <Label fx:id="lblTotalCancelResult" text="0" />
                        </HBox>
                    </VBox>
                </HBox>

            </HBox>
        </VBox>

        <HBox alignment="CENTER" spacing="20.0">
            <ComboBox fx:id="filterCategory" prefWidth="150.0" />
            <ComboBox fx:id="filterDate" prefWidth="150.0" />
            <DatePicker fx:id="customDatePicker" />
            <Button fx:id="refreshBtn" mnemonicParsing="false" onAction="#clickRefreshChartBtn" text="Refresh" />
        </HBox>

        <VBox alignment="CENTER" layoutX="14.0" layoutY="260.0">
            <LineChart fx:id="revenueLineChart">
                <xAxis>
                    <CategoryAxis label="Date" fx:id="xAxis" />
                </xAxis>
                <yAxis>
                    <NumberAxis fx:id="yAxis" label="Revenue (MMK)" />
                </yAxis>
            </LineChart>
        </VBox>
    </VBox>
</AnchorPane>
