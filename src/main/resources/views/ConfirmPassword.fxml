<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="confirmPasswordStackPane" prefHeight="274.0" prefWidth="258.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cakeshopsystem.controllers.ConfirmPasswordController">
   <children>
      <VBox alignment="CENTER" spacing="25.0">
         <children>
            <TextField fx:id="txtPwd" promptText="Password">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="txtConfirmPwd" promptText="Confirm Password">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </VBox.margin>
            </TextField>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="btnConfirm" alignment="CENTER" mnemonicParsing="false" onAction="#clickBtnConfirm" text="Confirm" />
               </children>
            </HBox>
            <HBox prefHeight="41.0" prefWidth="208.0">
               <children>
                  <Hyperlink fx:id="hyperLinkBackToLogin" text="Back to Login">
                     <HBox.margin>
                        <Insets top="50.0" />
                     </HBox.margin>
                  </Hyperlink>
               </children>
            </HBox>
         </children>
         <StackPane.margin>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
         </StackPane.margin>
      </VBox>
   </children>
</StackPane>
