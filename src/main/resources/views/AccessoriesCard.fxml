<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns:fx="http://javafx.com/fxml/1"
           xmlns="http://javafx.com/javafx/25"
           fx:controller="com.cakeshopsystem.controllers.AccessoriesCardController"
           styleClass="card"
           stylesheets="@../assets/css/style.css">

    <VBox fx:id="accessoryCardVbox" spacing="10" styleClass="card-body">

        <!-- Image -->
        <StackPane styleClass="image-wrap">
            <ImageView fx:id="accessoryImage"
                       fitWidth="180.0"
                       fitHeight="140.0"
                       preserveRatio="true"
                       pickOnBounds="true"
                       styleClass="card-image"/>
        </StackPane>

        <!-- Name -->
        <Label fx:id="accessoryName"
               maxWidth="180.0"
               wrapText="true"
               styleClass="card-header"/>

        <!-- Price -->
        <HBox alignment="CENTER_LEFT" spacing="8">
            <Label text="Price:" styleClass="meta"/>
            <Label fx:id="accessoryPrice" styleClass="card-price"/>
            <Region HBox.hgrow="ALWAYS"/>
            <!-- Optional badge (if you want stock/availability)
            <Label fx:id="availabilityBadge" styleClass="badge"/>
            -->
        </HBox>

        <!-- Qty + Add -->
        <HBox alignment="CENTER_LEFT" spacing="10">

            <HBox alignment="CENTER" styleClass="qty-stepper">
                <Button fx:id="terminus"
                        mnemonicParsing="false"
                        text="-"
                        styleClass="card-dec-btn"/>
                <Label fx:id="quantityLabel"
                       text="0"
                       alignment="CENTER"
                       minWidth="28"
                       prefWidth="28"
                       styleClass="qty-label"/>
                <Button fx:id="btnplus"
                        mnemonicParsing="false"
                        text="+"
                        styleClass="card-inc-btn"/>
            </HBox>

            <Region HBox.hgrow="ALWAYS"/>

            <Button fx:id="addToCartBtn"
                    mnemonicParsing="false"
                    text="Add to Cart"
                    styleClass="card-btn"/>
        </HBox>

    </VBox>
</StackPane>
