<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cakeshopsystem.controllers.ReceiptController"
      spacing="12"
      prefWidth="520">

    <VBox fx:id="receiptRoot" spacing="8">
        <padding>
            <Insets top="16" right="16" bottom="16" left="16"/>
        </padding>
        <Label text="Receipt" styleClass="title"/>

        <GridPane hgap="10" vgap="6">
            <columnConstraints>
                <ColumnConstraints prefWidth="110"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <Label text="Order ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Label fx:id="lblOrderId" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Date:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Label fx:id="lblDate" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Cashier:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Label fx:id="lblCashier" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Payment:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <Label fx:id="lblPayment" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        </GridPane>

        <Separator/>

        <ScrollPane fx:id="spItems" fitToWidth="true" VBox.vgrow="ALWAYS">
            <VBox fx:id="itemsBox" spacing="10"/>
        </ScrollPane>

        <Separator/>

        <GridPane hgap="10" vgap="6">
            <columnConstraints>
                <ColumnConstraints prefWidth="160"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <Label text="Subtotal:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Label fx:id="lblSubtotal" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Discount:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Label fx:id="lblDiscount" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Grand Total:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <Label fx:id="lblGrandTotal" GridPane.rowIndex="2" GridPane.columnIndex="1" style="-fx-font-weight: bold;"/>
        </GridPane>
    </VBox>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="btnCancel" text="Cancel" styleClass="cancel-btn" onAction="#onCancel"/>
        <Button fx:id="btnPrint" text="Print" onAction="#onPrint"/>
    </HBox>
</VBox>
