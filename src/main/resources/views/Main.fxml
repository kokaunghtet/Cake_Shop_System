<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<StackPane fx:id="mainStackPane" minHeight="500.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cakeshopsystem.controllers.MainController">
    <children>
        <BorderPane fx:id="mainBorderPane">
            <top>
                <HBox fx:id="topBar" styleClass="topbar" spacing="30.0" BorderPane.alignment="CENTER">
                    <children>
                        <HBox>
                            <children>
                                <ImageView fx:id="profileImageView" fitHeight="70.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true" />
                                <VBox alignment="CENTER" spacing="20.0">
                                    <children>
                                        <Label fx:id="usenameLabel" text="Username" />
                                        <Label fx:id="roleLabel" text="Role" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="38.0" prefWidth="481.0" spacing="20.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Hyperlink fx:id="adminDashboardLink" minWidth="-Infinity" text="Dashboard" />
                                <Hyperlink fx:id="staffDashboardLink" layoutX="10.0" layoutY="33.0" minWidth="-Infinity" text="Dashboard" />
                                <Hyperlink fx:id="userLink" minWidth="-Infinity" text="User" />
                                <Hyperlink fx:id="adminProductLink" minWidth="-Infinity" text="Product" />
                                <Hyperlink fx:id="memberLink" minWidth="-Infinity" text="Member" />
                                <Hyperlink fx:id="staffProductLink" minWidth="-Infinity" text="Product" />
                                <Hyperlink fx:id="customerOrderLink" minWidth="-Infinity" text="Customer Order" />
                                <Hyperlink fx:id="bookingLink" minWidth="-Infinity" text="Booking" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" spacing="20.0">
                            <children>
                        <FontIcon fx:id="moonIcon" iconLiteral="fas-moon" iconSize="20" />
                                <FontIcon fx:id="settingIcon" iconLiteral="fas-sliders-h" iconSize="20" />
                        <FontIcon fx:id="signoutIcon" iconLiteral="fas-sign-out-alt" iconSize="20" />
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </HBox>
                    </children>
                </HBox>
            </top>
            <center>
                <AnchorPane fx:id="centerAnchorPane" BorderPane.alignment="CENTER" />
            </center>
        </BorderPane>
    </children>
</StackPane>
