    <!--        </StackPane>-->

    <!--    </AnchorPane>-->
    <AnchorPane fx:id="overlayPane" managed="false" style="-fx-background-color: rgba(0,0,0,0.4);" visible="false">

        <StackPane fx:id="popupPane" onMouseClicked="#handleOverlayClick" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
    </AnchorPane>


</StackPane>
