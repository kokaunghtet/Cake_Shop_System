<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="productsCard_root" prefHeight="1100.0" prefWidth="1600.0" xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cakeshopsystem.controllers.CakeOrderController">
    <children>
        <ScrollPane fx:id="productsCardScrollPane" prefHeight="1100.0" prefWidth="1600.0">
            <content>
                <VBox fx:id="productsCardVbox" prefHeight="1100.0" prefWidth="1600.0">
                    <children>
                        <VBox fx:id="vboxDiscountItem" prefHeight="200.0" prefWidth="200.0">
                            <children>
                                <Label fx:id="lblDiscountItems" text="Discount Items"/>
                                <ScrollPane fx:id="discountItemsScrollPane" prefHeight="200.0" prefWidth="200.0"/>
                            </children>
                        </VBox>
                        <VBox fx:id="vboxCake" prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <Label fx:id="lblCake" text="Cake"/>
                                <ScrollPane fx:id="cakeScrollPane" prefHeight="200.0" prefWidth="200.0"/>
                            </children>
                        </VBox>
                        <VBox fx:id="vboxDrink" prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <Label fx:id="lblDrink" text="Drink"/>
                                <ScrollPane fx:id="drinkScrollPane" prefHeight="200.0" prefWidth="200.0"/>
                            </children>
                        </VBox>
                        <VBox fx:id="vboxDesserts" prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <Label fx:id="lblDesserts" text="Desserts"/>
                                <ScrollPane fx:id="dessertsScrollPane" prefHeight="200.0" prefWidth="200.0"/>
                            </children>
                        </VBox>
                        <VBox fx:id="vboxAccessories" prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <Label fx:id="lblAccessories" text="Accessories"/>
                                <ScrollPane fx:id="accessoriesScrollPane" prefHeight="200.0" prefWidth="200.0"/>
                            </children>
                        </VBox>
                        <Button fx:id="btnAddToCardAll" alignment="CENTER_RIGHT" mnemonicParsing="false"
                                onAction="#clickAddToCardAll" text="Button">
                            <VBox.margin>
                                <Insets top="30.0"/>
                            </VBox.margin>
                        </Button>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
