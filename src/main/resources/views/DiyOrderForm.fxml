<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cakeshopsystem.controllers.DiyOrderFormController">

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <!-- Define ToggleGroup once (cleaner than nesting it inside a RadioButton) -->
    <fx:define>
        <ToggleGroup fx:id="tgSessionTime"/>
    </fx:define>

    <!-- SEARCH MEMBER VIEW -->
    <VBox fx:id="vbSearchMember"
          alignment="CENTER"
          spacing="12.0"
          AnchorPane.topAnchor="0.0"
          AnchorPane.rightAnchor="0.0"
          AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0">

        <Label text="Search For Members" styleClass="title"/>

        <TextField fx:id="tfPhoneNumber"
                   promptText="Enter Phone Number"/>

        <HBox alignment="CENTER_RIGHT" spacing="12.0">
            <Button fx:id="btnCancel" mnemonicParsing="false" styleClass="cancel-btn" text="Cancel"/>
            <Button fx:id="btnSearch" mnemonicParsing="false" text="Search"/>
        </HBox>
    </VBox>

    <!-- DIY ORDER VIEW -->
    <VBox fx:id="vbDiyOrder"
          spacing="16.0"
          visible="false"
          managed="false"
          AnchorPane.topAnchor="0.0"
          AnchorPane.rightAnchor="0.0"
          AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0">

        <Label text="DIY Session" styleClass="title"/>

        <GridPane hgap="14.0" vgap="14.0" maxWidth="720">
            <padding>
                <Insets top="8" right="0" bottom="0" left="0"/>
            </padding>

            <columnConstraints>
                <ColumnConstraints minWidth="120" prefWidth="160" hgrow="NEVER"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <rowConstraints>
                <RowConstraints minHeight="28"/>
                <RowConstraints minHeight="36"/>
                <RowConstraints minHeight="36"/>
                <RowConstraints minHeight="36"/>
            </rowConstraints>

            <!-- Row 0: Cake Name -->
            <Label fx:id="lblCakeName"
                   text="Cake Name"
                   styleClass="sub-title"
                   GridPane.columnSpan="2"
                   GridPane.rowIndex="0"/>

            <!-- Row 1: Date -->
            <Label text="Date" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <DatePicker fx:id="dbOrderDate"
                        maxWidth="1.7976931348623157E308"
                        GridPane.rowIndex="1"
                        GridPane.columnIndex="1"/>

            <!-- Row 2: Time -->
            <Label text="Session Time" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <HBox alignment="CENTER_LEFT" spacing="14.0" GridPane.rowIndex="2" GridPane.columnIndex="1">
                <RadioButton fx:id="rbFirst"
                             mnemonicParsing="false"
                             text="9:00 - 11:00"
                             toggleGroup="$tgSessionTime"/>
                <RadioButton fx:id="rbSecond"
                             mnemonicParsing="false"
                             text="12:00 - 2:00"
                             toggleGroup="$tgSessionTime"/>
                <RadioButton fx:id="rbThird"
                             mnemonicParsing="false"
                             text="3:00 - 5:00"
                             toggleGroup="$tgSessionTime"/>
            </HBox>

            <!-- Row 3: Confirm -->
            <Button fx:id="btnConfirm"
                    mnemonicParsing="false"
                    text="Confirm"
                    GridPane.rowIndex="3"
                    GridPane.columnIndex="1"
                    GridPane.halignment="RIGHT"/>
        </GridPane>
    </VBox>
</AnchorPane>
