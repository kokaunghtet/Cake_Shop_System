<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>


<StackPane prefHeight="299.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cakeshopsystem.controllers.ForgotPasswordController">
   <children>
      <VBox alignment="CENTER" spacing="15.0">
         <children>
            <TextField fx:id="txtEmail" promptText="Email" />
            <TextField fx:id="txtOTP" promptText="OTP" />
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Hyperlink onAction="#clickSendOTP" text="Send OTP">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                     <padding>
                        <Insets left="15.0" />
                     </padding>
                  </Hyperlink>
                  <Label fx:id="lblTimer">
                     <HBox.margin>
                        <Insets left="40.0" right="20.0" />
                     </HBox.margin>
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                  </Label>
               </children>
            </HBox>
            <Button fx:id="btnVerifyOTP" mnemonicParsing="false" onAction="#clickVerifyOTP" text="Verify OTP" />
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Hyperlink onAction="#clickBacktoLogin" text="Back to Login" />
               </children>
            </HBox>
         </children>
         <StackPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="25.0" />
         </StackPane.margin>
      </VBox>
   </children>
</StackPane>
