<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns:fx="http://javafx.com/fxml/1"
           xmlns="http://javafx.com/javafx/25"
           fx:controller="com.cakeshopsystem.controllers.DrinkCardController"
           styleClass="card">

    <VBox fx:id="drinkCardVbox"
          spacing="10"
          styleClass="card-body">

        <!-- Image -->
        <StackPane>
            <ImageView fx:id="drinkImage"
                       fitWidth="180.0"
                       fitHeight="140.0"
                       preserveRatio="true"
                       pickOnBounds="true"
                       styleClass="card-image"/>
        </StackPane>

        <!-- Name -->
        <Label fx:id="drinkName"
               styleClass="card-header"
               wrapText="true"
               maxWidth="180.0"/>

        <!-- Hot / Cold -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <RadioButton fx:id="hotOption" text="Hot"/>
            <RadioButton fx:id="coldOption" text="Cold"/>
        </HBox>

        <!-- Price -->
        <HBox spacing="8" alignment="CENTER_LEFT">
            <Label text="Price:" styleClass="meta"/>
            <Label fx:id="drinkPrice" styleClass="card-price"/>
        </HBox>

        <!-- Qty + Add -->
        <HBox spacing="10" alignment="CENTER_LEFT">

            <HBox alignment="CENTER" styleClass="qty-stepper">
                <Button fx:id="decreaseBtn"
                        text="-"
                        mnemonicParsing="false"
                        styleClass="card-dec-btn"/>
                <Label fx:id="quantityLabel"
                       text="0"
                       alignment="CENTER"
                       minWidth="28"
                       prefWidth="28"
                       styleClass="qty-label"/>
                <Button fx:id="increaseBtn"
                        text="+"
                        mnemonicParsing="false"
                        styleClass="card-inc-btn"/>
            </HBox>

            <Region HBox.hgrow="ALWAYS"/>

            <Button fx:id="addToCartBtn"
                    text="Add to Cart"
                    mnemonicParsing="false"
                    styleClass="card-btn"/>
        </HBox>

    </VBox>
</StackPane>
