<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="spBookingCard" styleClass="card"
           xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.cakeshopsystem.controllers.BookingCardController">

    <VBox fx:id="vbBookingCard" minWidth="200.0" spacing="10" styleClass="card-body">
        <!-- Phone Number -->
        <Label fx:id="lblMemberPhone" text="Member Phone number"/>

        <!-- Name -->
        <Label fx:id="lblBookingName" styleClass="card-header" text="Booking Name" wrapText="true"/>

        <!-- Pickup date (custom cake) -->
        <Label fx:id="lblPickupDate" text="Pickup Date"/>

        <!-- Session time block (DIY) -->
        <HBox fx:id="hbSessionTime" spacing="20.0">
            <Label fx:id="lblStartTime" text="Start Time"/>
            <Label text="-"/>
            <Label fx:id="lblEndTime" text="End Time"/>
        </HBox>

        <!-- Status -->
        <ComboBox fx:id="cbBookingStatus" maxWidth="1.7976931348623157E308"/>

        <HBox fx:id="boxButton" alignment="CENTER_RIGHT">
            <Button fx:id="btnConfirm" mnemonicParsing="false" text="Confirm"/>
        </HBox>

    </VBox>
</StackPane>
