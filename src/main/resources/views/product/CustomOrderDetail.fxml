<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="customOrderDetailPane" alignment="CENTER" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cakeshopsystem.controllers.product.CustomOrderDetailController">
   <children>
      <ImageView fx:id="customCakeImageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin></ImageView>
      <HBox>
         <children>
            <Label fx:id="lblFlavour" text="Flavour" />
            <ComboBox fx:id="comboFlavour" prefWidth="150.0" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <HBox>
         <children>
            <Label fx:id="lblTopping" text="Topping" />
            <ComboBox fx:id="comboTopping" prefWidth="150.0" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <HBox>
         <children>
            <Label fx:id="lblSize" text="Size" />
            <HBox>
               <children>
                  <RadioButton mnemonicParsing="false" text="2 inches">
                     <toggleGroup>
                        <ToggleGroup fx:id="toggleSize" />
                     </toggleGroup></RadioButton>
                  <RadioButton mnemonicParsing="false" text="4 inches" toggleGroup="$toggleSize" />
                  <RadioButton mnemonicParsing="false" text="6 inches" toggleGroup="$toggleSize" />
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </HBox>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <HBox>
         <children>
            <Label fx:id="lblMessage" text="Message" />
            <TextArea fx:id="textAreaMessage" prefHeight="200.0" prefWidth="200.0" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <HBox>
         <children>
            <Label fx:id="lblPickUpDate" text="Pickup Date" />
            <DatePicker fx:id="datePickerPickUpDate" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <HBox>
         <children>
            <Button fx:id="btnCancel" mnemonicParsing="false" text="Cancel" />
            <Button fx:id="btnConfirm" mnemonicParsing="false" text="Confirm" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
